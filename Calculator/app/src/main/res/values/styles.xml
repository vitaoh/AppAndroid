<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema geral -->
    <style name="Theme.CalculadoraCompleta" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">#1F1F1F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC5</item>
    </style>

    <!-- BotÃµes arredondados -->
    <style name="RoundedButton.Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="RoundedButton.Dark" parent="RoundedButton.Base">
        <item name="android:backgroundTint">#2C2C2C</item>
    </style>

    <style name="RoundedButton.LightGray" parent="RoundedButton.Base">
        <item name="android:backgroundTint">#3A3A3A</item>
    </style>

    <style name="RoundedButton.Orange" parent="RoundedButton.Base">
        <item name="android:backgroundTint">#FF9800</item>
    </style>

    <style name="RoundedButton.Green" parent="RoundedButton.Base">
        <item name="android:backgroundTint">#4CAF50</item>
    </style>

</resources>
